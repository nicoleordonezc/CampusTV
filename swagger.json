{
  "openapi": "3.0.0",
  "info": {
    "title": "CampusTV API",
    "version": "1.0.0",
    "description": "API para gestionar contenidos, reseñas, usuarios y categorías en CampusTV."
  },
  "servers": [
    {
      "url": "http://localhost:5500/api",
      "description": "Servidor local de desarrollo"
    }
  ],
  "paths": {
    "/contenidos/getall": {
      "get": {
        "summary": "Obtener todos los contenidos",
        "tags": ["Contenidos"],
        "responses": {
          "200": {
            "description": "Lista de contenidos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Contenido"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/reseñas": {
      "post": {
        "summary": "Crear una reseña",
        "tags": ["Reseñas"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ReseñaInput"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Reseña creada exitosamente" },
          "400": { "description": "Datos inválidos" }
        }
      }
    },
    "/reseñas/{id}": {
      "put": {
        "summary": "Editar una reseña existente",
        "tags": ["Reseñas"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ReseñaInput" }
            }
          }
        },
        "responses": {
          "200": { "description": "Reseña editada exitosamente" },
          "404": { "description": "Reseña no encontrada" }
        }
      }
    },
    "/reseñas/{id}/reaction": {
      "post": {
        "summary": "Dar like o dislike a una reseña",
        "tags": ["Reseñas"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "action": {
                    "type": "string",
                    "enum": ["like", "dislike"]
                  }
                },
                "example": { "action": "like" }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Reacción registrada" },
          "400": { "description": "Acción inválida" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Contenido": {
        "type": "object",
        "properties": {
          "_id": { "type": "string", "example": "68b3a9aaa8eea04af31bbf4d" },
          "title": { "type": "string", "example": "Friends" },
          "description": { "type": "string", "example": "Seis amigos viven divertidas situaciones en Nueva York." },
          "year": { "type": "integer", "example": 1994 },
          "category": { "type": "string", "example": "Comedia" },
          "approved": { "type": "boolean", "example": true },
          "type": { "type": "string", "example": "serie" }
        }
      },
      "Reseña": {
        "type": "object",
        "properties": {
          "userName": { "type": "string", "example": "Miguel Ruiz" },
          "contentName": { "type": "string", "example": "Breaking Bad" },
          "title": { "type": "string", "example": "Obra maestra" },
          "review": { "type": "string", "example": "El desarrollo de personajes es insuperable." },
          "score": { "type": "integer", "example": 10 },
          "likes": {
            "type": "array",
            "items": { "type": "string" }
          },
          "dislikes": {
            "type": "array",
            "items": { "type": "string" }
          },
          "date": { "type": "string", "format": "date-time" }
        }
      },
      "ReseñaInput": {
        "type": "object",
        "properties": {
          "contentName": { "type": "string", "example": "Breaking Bad" },
          "title": { "type": "string", "example": "Gran serie" },
          "review": { "type": "string", "example": "Muy entretenida y con giros inesperados." },
          "score": { "type": "integer", "example": 9 }
        }
      },
      "Usuario": {
        "type": "object",
        "properties": {
          "_id": { "type": "string", "example": "68b3ae5681bb898198379d3f" },
          "name": { "type": "string", "example": "Cubides" },
          "email": { "type": "string", "example": "cubides@gmail.com" },
          "password": { "type": "string", "example": "hashedpassword" },
          "rol": { "type": "string", "example": "usuario" }
        }
      },
      "Categoria": {
        "type": "object",
        "properties": {
          "_id": { "type": "string", "example": "68b325a4166a945baeba777f" },
          "name": { "type": "string", "example": "Ciencia Ficción" },
          "description": { "type": "string", "example": "Películas y series de ciencia ficción con tecnología y viajes espaciales." }
        }
      }
    }
  }
}
